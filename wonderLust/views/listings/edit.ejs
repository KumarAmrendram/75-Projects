<% layout('/layouts/boilerplate') -%>

<body>
  <div class="flex justify-center flex-col items-center border-2 border-gray-900/10 m-10 mx-4 px-2 lg:m-20">
    <h1 class="text-2xl text-center my-4">Edit Listing</h1>
    <form action="/listings/<%= listing._id%>?_method=PUT" method="POST">
      <div class="">
        <label for="title" class="text-bold">Title</label><br>
        <input
          type="text"
          placeholder="title"
          name="listing[title]"
          id="title"
          value="<%= listing.title %>"
          class=" py-2 pe-8 ps-2 my-1 rounded-lg w-full"
        />
      </div>

      <div class="">
        <label for="description" class="text-semibold">Description</label><br>

        <textarea
          placeholder="description"
          name="description"
          id="description"
          rows="4"
          cols="50"
          class=" py-2 pe-8 ps-2 my-1 rounded-lg w-full"
          style="resize: none;"
        ><%= listing.description %></textarea
        >
      </div>
      <div class="">
        <label for="image" class="text-semibold">Image</label><br>
        <input
          type="text"
          placeholder="image url"
          name="listing[image]"
          id="image"
          value="<%= listing.image %>"
          class=" py-2 pe-8 ps-2 my-1 rounded-lg w-full"
        />
      </div>
      <div class="">
        <label for="price" class="text-semibold">Price</label><br>
        <input
          type="number"
          placeholder="price"
          name="listing[price]"
          id="price"
          value="<%= listing.price %>"
          class=" py-2 pe-8 ps-2 my-1 rounded-lg w-full"
        />
      </div>
      <div class="">
        <label for="location" class="text-semibold">Location</label><br>
        <input
          type="text"
          placeholder="location"
          name="listing[location]"
          id="location"
          value="<%= listing.location %>"
          class=" py-2 pe-8 ps-2 my-1 rounded-lg w-full"
        />
      </div>
      <div class="">
        <label for="country" class="text-semibold">Country</label><br>
        <input
          type="text"
          placeholder="country"
          name="listing[country]"
          id="country"
          value="<%= listing.country %>"
          class=" py-2 pe-8 ps-2 my-1 rounded-lg w-full"
        />
      </div>
      <div class="">
        <button type="submit" class="py-2 px-4 bg-blue-400 rounded-lg my-2">add listing</button>
      </div>
    </form>
  </div>
</body>
