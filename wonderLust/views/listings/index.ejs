<% layout('/layouts/boilerplate') -%>

<body>
  <h2 class="text-center text-5xl font-bold mt-10">All listings</h2>
  <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 place-items-center gap-y-10 lg:mx-20 mt-10">
    <% for(listing of allListings){ %>
    <div class="bg-red-100 p-4 rounded-xl hover:scale-105 ease-out duration-300 	">
      <a href="/listing/<%= listing._id %>">
        <div class="">
          <img
            class="w-[300px] h-[300px] rounded-xl"
            src="<%= listing.image %>"
            alt=""
            srcset=""
          />
        </div>
        <li class="text-xl font-semibold"><%= listing.title %></li>
        <li class="text-lg "><%= listing.price %></li>
        <li class="text-lg "><%= listing.location %>,<%= listing.country %></li>

      </a>
    </div>
    <% }%>
  </ul>
</body>
